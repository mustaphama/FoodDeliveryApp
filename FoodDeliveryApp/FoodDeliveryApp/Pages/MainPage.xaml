<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodDeliveryApp.MainPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
            xmlns:local="clr-namespace:FoodDeliveryApp.MVVM"
            Shell.FlyoutBehavior="Disabled"
            xmlns:pages="clr-namespace:FoodDeliveryApp.Pages">
    <ContentPage.BindingContext>
        <local:MainPageViewModel/>
    </ContentPage.BindingContext>
    <StackLayout VerticalOptions="Center" Padding="20">
        <Image Source="fda_logo.png" WidthRequest="150" HeightRequest="150"/>
        <Label Text="FDA" 
               FontSize="Large" 
               HorizontalOptions="Center" Margin="10"/>
        <Grid ColumnDefinitions="*,*" ColumnSpacing="10" HorizontalOptions="FillAndExpand">
            <Button Grid.Column="0" Text="Login" 
                Command="{Binding NavigateToLoginCommand}" />

            <Button Grid.Column="1" Text="Register" 
                Command="{Binding NavigateToRegisterCommand}" />
        </Grid>

    </StackLayout>

</ContentPage>
